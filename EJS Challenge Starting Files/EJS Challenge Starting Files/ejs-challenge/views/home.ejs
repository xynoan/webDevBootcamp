<%- include('partials/header'); -%>
<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% posts.forEach(function(submissions){ %>
    <h1><%= submissions.title %></h1>
    <% if (submissions.post.length >= 100){ %>
        <p><%= submissions.post.slice(0, 100) + "..." %> 
            <span><a href="/posts/<%=submissions.title%>">Read More</a></span>
        </p>
    <% } else { %> 
        <p><%= submissions.post %></p>
    <% }; %> 
<% }); %> 
<%- include('partials/footer'); -%>
